pipeline {
    agent any
    environment {
        CONTAINER_NAME = 'container-vault-server'
    }
    stages {

        stage('Stop Vault Container') {
            steps {
                script {
                    // Arrêter tout conteneur existant
                    sh """
                        docker stop ${CONTAINER_NAME} || true
                    """
                }
            }
        }
    }
    post {
//      always {
//      }
        success {
            echo 'Container arrêté avec succès !'
        }
        failure {
            echo 'Echec d\'arrêter le Container !'
        }
    }
}