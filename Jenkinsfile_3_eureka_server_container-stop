pipeline {
    agent any
    environment {
        CONTAINER_NAME = 'container-springboot-conf-eureka-server'
    }
    stages {

        stage('Stop Zipkin') {
            steps {
                script {
                    // Arrêter et supprimer tout conteneur eureka-server existant
                    sh """
                        docker stop ${CONTAINER_NAME} || true
                        docker rm ${CONTAINER_NAME} || true
                    """
                }
            }
        }
    }
    post {
//      always {
//      }
        success {
            echo 'eureka-server arrêté avec succès !'
        }
        failure {
            echo 'Echec d\'arrêter eureka-server !'
        }
    }
}