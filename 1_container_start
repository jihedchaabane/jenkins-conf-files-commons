//						# Vérification finale
//						curl --fail http://localhost:${APP_PORT}/actuator/health || exit 1
//					"""
//				}
//			}
//		}

    }
    post {
        success {
            echo 'Application démarrée avec succés !'
        }
        failure {
            echo 'Echec du démarrage de l\'application.'
        }
    }
}