pipeline {
    agent any
    tools {
        maven 'MAVEN'
    }
    stages {
        
        stage('Stop Container') {
            steps {
                script {
                    // Arréter et supprimer le conteneur s'il existe
                    sh """
                        docker stop ${CONTAINER_NAME} || true
                    """
                }
            }
        }
		
		stage('Run Docker Container') {
            steps {
                script {
                    // Lancer le conteneur
                    sh """
                        docker start ${CONTAINER_NAME}
                    """
                }
            }
        }

//        stage('Verify Container') {
