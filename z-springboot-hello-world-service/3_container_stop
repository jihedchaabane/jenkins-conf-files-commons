pipeline {
    agent any
    environment {
        CONTAINER_NAME = 'container-z-springboot-hello-world-service'
    }
    stages {

        stage('Stop Container') {
            steps {
                script {
                    // Arrêter tout conteneur existant
                    sh """
                        docker stop ${CONTAINER_NAME} || true
                    """
                }
            }
        }
    }
    post {
//      always {
//      }
        success {
            echo 'Conteneurr arrêté avec succès !'
        }
        failure {
            echo 'Echec d\'arrêter le conteneur !'
        }
    }
}